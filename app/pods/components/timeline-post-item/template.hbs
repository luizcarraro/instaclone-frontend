<header class="photo__header">
  <div class="photo__header-column">
    <img class="photo__avatar" src="/images/avatar.jpg" />
  </div>
  <div class="photo__header-column">
    <span class="photo__username">
      {{#link-to "profile"}}
      serranoarevalo
      {{/link-to}}
    </span>
    <span class="photo__location">Pato Branco - PR</span>
  </div>
</header>
<div class="photo__file-container">
  <img class="photo__file" src="images/feedPhoto.jpg" />
</div>
<div class="photo__info">
  <div class="photo__icons">
    <span class="photo__icon">
      <i class="fa fa-heart-o heart fa-lg"></i>
    </span>
    <span class="photo__icon">
      <i class="fa fa-comment-o fa-lg"></i>
    </span>
  </div>
  <span class="photo__likes">35 likes</span>
  <ul class="photo__comments">
    <li class="photo__comment">
      <span class="photo__comment-author">serranoarevalo</span>que vista!
    </li>
    <li class="photo__comment">
      <span class="photo__comment-author">lynn</span>top!
    </li>
  </ul>
  <span class="photo__time-ago">11 atrás</span>
  <div class="photo__add-comment-container">
    <textarea placeholder="Adicionar comentário" class="photo__add-comment"></textarea>
    <i class="fa fa-ellipsis-h"></i>
  </div>
</div>